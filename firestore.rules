
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helpers
    function isSignedIn() {
      return request.auth != null;
    }

    // üîπ ‡¶§‡ßã‡¶Æ‡¶æ‡¶∞ admin account
    function isAdmin() {
      return isSignedIn() &&
        (
          request.auth.uid == "FD7Eh00D9ObTUmvfJ8ybAvbUn6h2" ||   // ‡¶§‡ßã‡¶Æ‡¶æ‡¶∞ UID
          request.auth.token.email == "shahmubaruk05@gmail.com"   // ‡¶§‡ßã‡¶Æ‡¶æ‡¶∞ ‡¶á‡¶Æ‡ßá‡¶á‡¶≤
        );
    }
    
    // Rule for collection group query on 'transactions'
    match /{path=**}/transactions/{txId} {
      allow list: if isAdmin();
    }


    // ---------- USERS ----------
    match /users/{userId} {
      // ‡¶≤‡¶ó‡¶á‡¶® ‡¶ï‡¶∞‡¶æ ‡¶Ø‡ßá ‡¶ï‡ßá‡¶â ‡¶∏‡¶¨ user ‡¶°‡¶ï ‡¶™‡ßú‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡¶¨‡ßá (recipient search ‡¶®‡¶æ ‡¶•‡¶æ‡¶ï‡¶≤‡ßá‡¶ì harmless)
      allow read: if isSignedIn();

      // ‡¶®‡¶ø‡¶ú‡ßá ‡¶®‡¶ø‡¶ú‡ßá‡¶∞ ‡¶™‡ßç‡¶∞‡ßã‡¶´‡¶æ‡¶á‡¶≤ update ‡¶ï‡¶∞‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡¶¨‡ßá
      // + admin ‡¶∏‡¶¨ user update ‡¶ï‡¶∞‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡¶¨‡ßá (walletBalance ‡¶∏‡¶π)
      allow update: if isSignedIn() && (
        request.auth.uid == userId ||    // ‡¶®‡¶ø‡¶ú‡ßá
        isAdmin()                        // admin
      );

      // signup ‡¶è‡¶∞ ‡¶∏‡¶Æ‡ßü create
      allow create: if isSignedIn();
    }

    // ---------- ROOT TRANSACTIONS ----------
    // ‡¶è‡¶ñ‡¶æ‡¶®‡ßá EXCHANGE / ADD FUNDS transaction ‡¶≤‡¶ó ‡¶•‡¶æ‡¶ï‡ßá
    match /transactions/{txId} {

      // ‡¶á‡¶â‡¶ú‡¶æ‡¶∞ ‡¶®‡¶ø‡¶ú‡ßá‡¶∞ transaction create ‡¶ï‡¶∞‡¶¨‡ßá (Exchange ‡¶∞‡¶ø‡¶ï‡ßã‡ßü‡ßá‡¶∏‡ßç‡¶ü)
      // ‡¶°‡¶ï‡ßá ‡¶Ö‡¶¨‡¶∂‡ßç‡¶Ø‡¶á userId == auth.uid ‡¶•‡¶æ‡¶ï‡¶§‡ßá ‡¶π‡¶¨‡ßá
      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;

      // ‡¶á‡¶â‡¶ú‡¶æ‡¶∞ ‡¶®‡¶ø‡¶ú‡ßá‡¶∞ transaction ‡¶ó‡ßÅ‡¶≤‡ßã ‡¶¶‡ßá‡¶ñ‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡¶¨‡ßá, admin ‡¶∏‡¶¨ ‡¶¶‡ßá‡¶ñ‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡¶¨‡ßá
      allow read: if
        isAdmin() ||
        (
          isSignedIn() &&
          resource.data.userId == request.auth.uid
        );

      // status, adminNote ‡¶á‡¶§‡ßç‡¶Ø‡¶æ‡¶¶‡¶ø update: ‡¶∂‡ßÅ‡¶ß‡ßÅ admin
      allow update: if isAdmin();
    }

    // ---------- USER SUBCOLLECTION: transactions ----------
    // ‡¶ï‡¶ø‡¶õ‡ßÅ ‡¶ï‡ßã‡¶° user-wise history ‡¶∞‡¶æ‡¶ñ‡¶≤‡ßá ‡¶è‡¶∞ ‡¶™‡ßç‡¶∞‡ßü‡ßã‡¶ú‡¶® ‡¶π‡¶¨‡ßá
    match /users/{userId}/transactions/{txId} {
      // user ‡¶®‡¶ø‡¶ú‡ßá‡¶∞ ‡¶°‡¶ï create ‡¶ï‡¶∞‡ßá (mirror log)
      allow create: if isSignedIn() && request.auth.uid == userId;

      // user ‡¶®‡¶ø‡¶ú‡ßá‡¶∞ history ‡¶™‡ßú‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡¶¨‡ßá, admin ‡¶∏‡¶¨
      allow read: if isAdmin() || (
        isSignedIn() && request.auth.uid == userId
      );

      // status sync / edit: ‡¶∂‡ßÅ‡¶ß‡ßÅ admin
      allow update: if isAdmin();
    }

    // ---------- Exchange rates ----------
    match /exchange_rates/{rateId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // ---------- Exchange limits ----------
    match /exchange_limits/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // ---------- Card applications ----------
    match /card_applications/{userId} {
      allow read, create, update: if isSignedIn() && request.auth.uid == userId;
      allow read, write: if isAdmin();
    }

    // üî• FINAL CATCH-ALL: admin ‡¶∏‡¶¨ document read/write ‡¶ï‡¶∞‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡¶¨‡ßá
    // ‡¶è‡¶ü‡¶æ ‡¶∏‡¶¨‡¶∂‡ßá‡¶∑‡ßá ‡¶•‡¶æ‡¶ï‡¶¨‡ßá, ‡¶Ø‡ßá‡¶® ‡¶¨‡¶æ‡¶ï‡¶ø ‡¶∏‡¶¨ specific rule ‡¶Ü‡¶ó‡ßá‡¶á apply ‡¶π‡ßü‡•§
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
