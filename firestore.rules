
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helpers
    function isSignedIn() {
      return request.auth != null;
    }

    // üîπ ‡¶§‡ßã‡¶Æ‡¶æ‡¶∞ admin account
    function isAdmin() {
      return isSignedIn() &&
        (
          request.auth.uid == "FD7Eh00D9ObTUmvfJ8ybAvbUn6h2" ||   // ‡¶§‡ßã‡¶Æ‡¶æ‡¶∞ UID
          request.auth.token.email == "shahmubaruk05@gmail.com"   // ‡¶§‡ßã‡¶Æ‡¶æ‡¶∞ ‡¶á‡¶Æ‡ßá‡¶á‡¶≤
        );
    }

    // ---------- USERS ----------
    match /users/{userId} {
      allow read: if isSignedIn();

      // ‡¶®‡¶ø‡¶ú‡ßá update ‡¶ï‡¶∞‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡¶¨‡ßá, admin ‡¶Ø‡ßá‡¶ï‡ßã‡¶®‡ßã user update ‡¶ï‡¶∞‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡¶¨‡ßá
      allow update: if isSignedIn() && (
        request.auth.uid == userId || isAdmin()
      );

      allow create: if isSignedIn();
    }

    // ---------- ROOT TRANSACTIONS ----------
    match /transactions/{txId} {
      // ‡¶∂‡ßÅ‡¶ß‡ßÅ ‡¶®‡¶ø‡¶ú‡ßá‡¶∞ userId ‡¶¶‡¶ø‡ßü‡ßá transaction create
      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;

      // ‡¶®‡¶ø‡¶ú‡ßá‡¶∞ transaction ‡¶™‡ßú‡¶æ, admin ‡¶∏‡¶¨ ‡¶™‡ßú‡¶¨‡ßá
      allow read: if isAdmin() || (
        isSignedIn() && resource.data.userId == request.auth.uid
      );

      // status, adminNote etc update ‡¶∂‡ßÅ‡¶ß‡ßÅ admin
      allow update: if isAdmin();
    }

    // ---------- USER SUBCOLLECTION: transactions ----------
    match /users/{userId}/transactions/{txId} {
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow read: if isAdmin() || (isSignedIn() && request.auth.uid == userId);
      allow update: if isAdmin();
    }
    
    // ---------- COLLECTION GROUP: transactions (for admin) ----------
    match /{path=**}/transactions/{txId} {
      allow read, list: if isAdmin();
    }

    // ---------- Exchange rates ----------
    match /exchange_rates/{rateId} {
      // ‡¶∏‡¶¨‡¶æ‡¶á rate ‡¶¶‡ßá‡¶ñ‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡¶¨‡ßá
      allow read;
      // ‡¶ï‡¶ø‡¶®‡ßç‡¶§‡ßÅ ‡¶≤‡¶ø‡¶ñ‡¶§‡ßá (add/update/delete) ‡¶™‡¶æ‡¶∞‡¶¨‡ßá ‡¶∂‡ßÅ‡¶ß‡ßÅ admin
      allow write: if isAdmin();
    }

    // ---------- Exchange limits ----------
    match /exchange_limits/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // ---------- Card applications ----------
    match /card_applications/{userId} {
      allow read, create, update: if isSignedIn() && request.auth.uid == userId;
      allow read, write: if isAdmin();
    }

    // ---------- Card top ups ----------
    match /card_top_ups/{docId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() || isAdmin();
      allow update, delete: if isAdmin();
    }

    // üî• Catch-all: admin ‡¶∏‡¶¨‡¶æ‡¶á‡¶ï‡ßá‡¶á ‡¶∏‡¶¨ ‡¶°‡¶ï ‡¶™‡ßú‡¶æ/‡¶≤‡ßá‡¶ñ‡¶æ ‡¶ï‡¶∞‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡¶¨‡ßá
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
