
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helpers ---
    function isSignedIn() {
      return request.auth != null;
    }

    // ‡¶§‡ßã‡¶Æ‡¶æ‡¶∞ admin ‡¶á‡¶â‡¶ú‡¶æ‡¶∞ (UID + ‡¶á‡¶Æ‡ßá‡¶á‡¶≤) ‡¶è‡¶ñ‡¶æ‡¶®‡ßá ‡¶¨‡¶∏‡¶ø‡ßü‡ßá ‡¶¶‡¶ø‡¶≤‡¶æ‡¶Æ
    function isAdmin() {
      return isSignedIn() &&
        (
          request.auth.uid == "FD7Eh00D9ObTUmvfJ8ybAvbUn6h2" ||   // your UID
          request.auth.token.email == "shahmubaruk05@gmail.com"   // your email
        );
    }

    // --- Users collection (‡¶Ü‡¶ó‡ßá ‡¶†‡¶ø‡¶ï ‡¶ï‡¶∞‡ßá ‡¶•‡¶æ‡¶ï‡¶≤‡ßá ‡¶∞‡¶æ‡¶ñ‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡ßã) ---
    match /users/{userId} {
      // ‡¶≤‡¶ó‡¶á‡¶® ‡¶ï‡¶∞‡¶æ ‡¶Ø‡ßá ‡¶ï‡ßá‡¶â ‡¶∏‡¶ï‡¶≤ user profile ‡¶™‡ßú‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡¶¨‡ßá
      allow read: if isSignedIn();

      // ‡¶®‡¶ø‡¶ú‡ßá‡¶∞ ‡¶™‡ßç‡¶∞‡ßã‡¶´‡¶æ‡¶á‡¶≤ ‡¶Ü‡¶™‡¶°‡ßá‡¶ü ‡¶ï‡¶∞‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡¶¨‡ßá
      allow update: if isSignedIn() && request.auth.uid == userId;

      // signup ‡¶è‡¶∞ ‡¶∏‡¶Æ‡ßü create
      allow create: if isSignedIn();
    }

    // --- Root transactions collection ---
    match /transactions/{txId} {

      // ‡¶®‡¶§‡ßÅ‡¶® ‡¶ü‡ßç‡¶∞‡¶æ‡¶®‡ßç‡¶∏‡¶´‡¶æ‡¶∞ create ‡¶ï‡¶∞‡¶æ‡¶∞ ‡¶∏‡¶Æ‡ßü senderId ‡¶Ö‡¶¨‡¶∂‡ßç‡¶Ø‡¶á auth.uid ‡¶π‡¶§‡ßá ‡¶π‡¶¨‡ßá
      allow create: if isSignedIn()
        && request.resource.data.senderId == request.auth.uid;

      // READ rules:
      // 1) admin ‚Üí ‡¶∏‡¶¨ transaction ‡¶™‡ßú‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡¶¨‡ßá (list ‡¶∏‡¶π)
      // 2) ‡¶∏‡¶æ‡¶ß‡¶æ‡¶∞‡¶£ user ‚Üí ‡¶∂‡ßÅ‡¶ß‡ßÅ ‡¶®‡¶ø‡¶ú‡ßá‡¶∞ sender/recipient ‡¶•‡¶æ‡¶ï‡¶æ transaction ‡¶™‡ßú‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡¶¨‡ßá
      allow read: if
        isAdmin() ||
        (
          isSignedIn() &&
          (
            resource.data.senderId == request.auth.uid ||
            resource.data.recipientId == request.auth.uid ||
            resource.data.userId == request.auth.uid     // ‡¶™‡ßÅ‡¶∞‡¶®‡ßã ‡¶´‡¶ø‡¶≤‡ßç‡¶° ‡¶•‡¶æ‡¶ï‡¶≤‡ßá ‡¶ï‡¶≠‡¶æ‡¶∞ ‡¶ï‡¶∞‡¶æ‡¶∞ ‡¶ú‡¶®‡ßç‡¶Ø
          )
        );
      
      // Admin can update/delete for status changes
      allow update, delete: if isAdmin();
    }
    
    // Collection group rule for all 'transactions' for admin list view
    match /{path=**}/transactions/{transactionId} {
        allow list: if isAdmin();
    }


    // ‡¶Ø‡¶¶‡¶ø users/{uid}/transactions subcollection‡¶ì ‡¶¨‡ßç‡¶Ø‡¶¨‡¶π‡¶æ‡¶∞ ‡¶ï‡¶∞‡ßã:
    match /users/{userId}/transactions/{txId} {
      allow create: if isSignedIn() && request.auth.uid == userId;

      allow read: if
        isAdmin() ||
        (isSignedIn() && request.auth.uid == userId);
      
      allow update, delete: if isAdmin();
    }

    // üí∞ Wallet balance data
    match /userAccounts/{userId} {
      // User can manage their own account
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
      // Admin can manage everything
      allow read, write: if isAdmin();
    }

    // üåê Exchange rates
    match /exchange_rates/{rateId} {
      allow read: if request.auth != null;   // All logged-in users can read
      allow write: if isAdmin();             // Only admins can change
    }

    // üåê Exchange limits
    match /exchange_limits/{docId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // ü™™ Card applications
    match /card_applications/{userId} {
      // User can manage their own application
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
      // Admin can read/write all applications
      allow read, write: if isAdmin();
    }

  }
}
